<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    #filters a{
        text-decoration: none;
        color: inherit;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        margin-left: 5rem;
    }
    #filter-btn{
        display: none;
    }
    @media (max-width:767px){
        #filter-btn{
            display: block;
            margin-top: 1rem !important;
        }
        #filters{
            flex-direction: column;
            position: relative;
            left: 0%;
            top: 100%;
            display: none;
            flex-flow: wrap;
            justify-content: center;
        }
        .filters{
            display: none;
        }
        .filters.active{
            display: flex;
        }
        .tax-toggle{
            margin: auto;
        }
        .filters a{
            height: auto;
        }
        .container-fluid{
            background-color: white;
        }
    }
</style>
<body>
    <button type="button" class="btn btn-primary" id="filter-btn">Filter</button>
    <div id="filters" class="filters">
        <a href="/listings/Trending/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-fire"></i>
            </div>
            <p>Trending</p>
        </div>
    </a>
    <a href="/listings/Rooms/filters" >
        <div class="filter">
            <div>
                <i class="fa-solid fa-bed"></i>
            </div>
            <p>Rooms</p>
        </div>
    </a>
    <a href="/listings/Iconic cities/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain-city"></i>
            </div>
            <p>Iconic cities</p>
        </div>
    </a>
    <a href="/listings/Mountains/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-mountain"></i>
            </div>
            <p>Mountains</p>
        </div>
    </a>
    <a href="/listings/Castles/filters">
        <div class="filter">
            <div>
                <i class="fa-brands fa-fort-awesome"></i>
            </div>
            <p>Castles</p>
        </div>
    </a>
    <a href="/listings/Amazing pools/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-person-swimming"></i>
            </div>
            <p>Amazing pools</p>
        </div>
    </a>
    <a href="/listings/Camping/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-campground"></i>
            </div>
            <p>Camping</p>
        </div>
    </a>
    <a href="/listings/Farms/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-cow"></i>
            </div>
            <p>Farms</p>
        </div>
    </a>
    <a href="/listings/Arctic/filters">
        <div class="filter">
            <div>
                <i class="fa-solid fa-snowflake"></i>
            </div>
            <p>Arctic</p>
        </div>
    </a>
    <a href="/listings/Beach/filters" >
        <div class="filter">
            <div>
                <i class="fa-solid fa-umbrella-beach"></i>
            </div>
            <p>Beach</p>
        </div>
    </a>
    <a href="/listings/Top city/filters">
        <div class="filter">
            <div>
                <i class="fa-duotone fa-solid fa-city"></i>
            </div>
            <p>Top city</p>
        </div>
    </a>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
          </div>
    </div>
    </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">        
            <% for(listing of allListing){ %>
                <a href="/listings/<%= listing._id  %>" class="listing-link">
                    <div class="card col listing-card" >
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                            <b><%= listing.title  %></b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN")  %>/night
                            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>    
                
          <% } %>
        </div>
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click",()=>{
            let tax_info = document.getElementsByClassName("tax-info");
            for(info of tax_info){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }
                else{
                    info.style.display = "none";
                }
            }
        });

        let filter_btn = document.getElementById("filter-btn");
        let filters = document.getElementById("filters");
        filter_btn.addEventListener("click",()=>{
            if(filters.style.display === "none"){
                filters.style.display = "flex";
            }
            else{
                filters.style.display = "none"
            }
        });
    </script>
</body>
