<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

        
    <h3>Edit your listing</h3>
        <div class="mb-3">
    <form method="POST" action="/listings/<%= listing._id  %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title">Title</label>
            <input type="text" value="<%= listing.title  %>" name=listing[title] class="form-control" required>
            <div class="valid-feedback">
                The title is perfect!
              </div>
              <div class="invalid-feedback">
                Invalid title!
              </div>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea name=listing[description] class="form-control" required><%= listing.description  %></textarea>
            <div class="valid-feedback">
                You've entered a valid description.
              </div>
              <div class="invalid-feedback">
                Description must be at least 40 characters long.
              </div>
        </div>

        <div class="md-3">
          Original Listing Image <br>
          <img src="<%= originalImage  %>">
        </div>
        <div class="row">
        <div class="mb-3 col-md-6">
            <label for="image">Upload new Image</label>
            <input type="file" name=listing[image] class="form-control">
            <div class="invalid-feedback">
                Please enter a valid image URL.
              </div>
        </div>
        <div class="mb-3 col-md-6" style="margin-top: auto;">
          <label for="category">category</label>
          <select name="listing[category]" class="form-control" id="category">
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic cities">Iconic cities</option>
          </select>
      </div>
      </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price">Price</label>
                <input type="number" name=listing[price] value="<%= listing.price  %>" class="form-control" required>
                <div class="valid-feedback">
                    You've entered a valid price.
                  </div>
                  <div class="invalid-feedback">
                    Please enter a valid price.
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country">Country</label>
                <input type="text" name=listing[country] value="<%= listing.country  %>" class="form-control" required>
                <div class="valid-feedback">
                    You've entered a valid country.
                  </div>
                  <div class="invalid-feedback">
                    Please enter a valid country.
                  </div> 
            </div>
            
        </div>
        <div class="mb-3">
            <label for="location">Location</label>
            <input type="text" name=listing[location] value="<%= listing.location  %>" class="form-control" required>
            <div class="valid-feedback">
                You've entered a valid location.
              </div>
              <div class="invalid-feedback">
                Please enter a valid location.
              </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3"> Edit</button>
        <br>
    </form>
</div>
</div>
</body>
