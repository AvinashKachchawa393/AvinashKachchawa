<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 media-signup-head">Sign Up on Wanderlust</h1>
    <div class="col-6 offset-3 media-signup">
        <form method="POST" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">
                    Username
                </label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="invalid-feedback">
                    <p>Please enter your username.</p>
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">
                    Email
                </label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="invalid-feedback">
                    <p>
                        Please enter your email address.
                    </p>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">
                    Password
                </label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="invalid-feedback">
                    <p>Password field cannot be left empty. Please enter a valid password.</p>
                </div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>